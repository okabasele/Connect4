{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/home.css') }}"/>
	<link rel="stylesheet" href="{{ asset('assets/css/game.css') }}"/>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/js/solo.js') }}"></script>
{% endblock %}

{% block status %}
<div class="home">
	<div id="mode-choice">
		<div class="player-container">
			<div class="player-content">
				<img id="icon-player-one" src="/assets/img/icon_red.png" alt="" srcset="">
				<div class="player-info">
					<p class="text-center">{{player.username}}</p>
				</div>
			</div>
			<div class="bg-image">
				<img src="/assets/img/item_player.png" alt="" srcset="">
			</div>
		</div>
			<form action="/api/games" method="post"  id="mode-custom" class="w-50 d-flex flex-column">		
			<p class="h1 text-center">VS</p>
				<input type="hidden" name="menu_choice" value="1">
				<input type="hidden" id="playerOneColor" name="player_one_color" value="red">
				<input type="hidden"id="playerTwoColor" name="player_two_color" value="yellow">
			<button onclick="pictureChange()" class="switch-button"></button>
			<button class="game-button" type="submit">COMMENCER</button>
			</form>


		<div class="player-container">
			<div class="player-content">
				<img id="icon-player-two" src="/assets/img/icon_yellow.png" alt="" srcset="">
				<div class="player-info">
					<p class="text-capitalize text-center">{{ai.username}}</p>
				</div>
			</div>
			<div class="bg-image">
				<img src="/assets/img/item_player.png" alt="" srcset="">
			</div>
		</div>
	</div>
{% endblock %}
