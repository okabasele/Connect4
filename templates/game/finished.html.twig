{% block status %}
	<div class="popup">
		<div class="popup-content">
		{% if  app.session.get('player').username in game.result %}
			<h1 class="popup-title text-center">Vous avez gagné</h1>
			
		{% elseif game.result == "TIE" %}
			<h1 class="popup-title text-center">Vous êtes à égalité</h1>

		{% else %}
			<h1 class="popup-title text-center">Vous avez perdu</h1>
			
		{% endif %}
			<div class="list-buttons">
				<form action="{{path('game_duo')}}" method="post">
			<input type="hidden" name="menu_choice" value="2">
			<button type="submit" class="game-button">
					CONTINUER
			</button>
			</form>
				<button class="game-button">
					<a href="{{path('app_menu')}}">
						ARRETER
