{% extends 'game/base.html.twig' %}

{% block game %}
    <div id="board" class="{{ disabled|default(false) ? 'disabled' : '' }}">
        {% for column in game.getBoardClass().getCells() %}
            <div class="column">
                {% for disc in column | reverse %}
                    {% if disc %}
                        <div class="cell disc {{ game.getPlayerColor(disc.getPlayer()) }}"></div>
                    {% else %}
                        <div class="cell empty"></div>
                    {% endif %}
                {% endfor %}
            </div>
        {% endfor %}
        <div class="clearfix"></div>
    </div>
{% endblock %}
